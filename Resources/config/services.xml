<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="antwebs_chateasecure_user_provider.class">Ant\Bundle\ChateaSecureBundle\Security\User\UserProvider</parameter>
        <parameter key="antwebs_chateasecure_authentication_provider.class">Ant\Bundle\ChateaSecureBundle\Security\Authentication\AuthenticationProvider</parameter>
        <parameter key="antwebs_chateasecure_authentication.class">Ant\ChateaClient\Client\Authentication</parameter>
        <parameter key="antwewebs_revoke_access_on_logout_handler.class">Ant\Bundle\ChateaSecureBundle\Security\Http\Logout\RevokeAccessOnLogoutHanler</parameter>

        <parameter key="antwebs_chateasecure.client.class">Guzzle\Service\Client</parameter>
        <parameter key="antwebs_chateasecure.factory_client_auth.class">Ant\ChateaClient\Service\Client\ChateaOAuth2Client</parameter>
        <parameter key="antwebs_chateasecure.factory_client_app.class">Ant\ChateaClient\Service\Client\ChateaGratisAppClient</parameter>
    </parameters>

    <services>
        <service id="antwebs_chateasecure.client"
                 class="%antwebs_chateasecure.client.class%"
                 factory-class="%antwebs_chateasecure.factory_client_app.class%"
                 factory-method="factory"
                 public="false">
            <argument type="collection">
                <argument key="client_id">%chatea_secure.app_auth.client_id%</argument>
                <argument key="secret">%chatea_secure.app_auth.secret%</argument>
                <argument key="environment">%chatea_secure.app_auth.enviroment%</argument>
            </argument>
        </service>

        <service id="antwebs_chateasecure.client_auth"
                 class="%antwebs_chateasecure.client.class%"
                 factory-class="%antwebs_chateasecure.factory_client_auth.class%"
                 factory-method="factory"
                 public="false">
            <argument type="collection">
                <argument key="environment">%chatea_secure.app_auth.enviroment%</argument>
                <argument key="client_id">%chatea_secure.app_auth.client_id%</argument>
                <argument key="secret">%chatea_secure.app_auth.secret%</argument>
            </argument>
        </service>

        <service id="antwebs_chateasecure_authentication" class="%antwebs_chateasecure_authentication.class%">
            <argument type="service" id="antwebs_chateasecure.client_auth" />
            <argument type="string">%chatea_secure.app_auth.client_id%</argument>
            <argument type="string">%chatea_secure.app_auth.secret%</argument>
        </service>

        <service id="antwebs_chateasecure_user_provider" class="%antwebs_chateasecure_user_provider.class%" >
            <argument type="service" id="antwebs_chateasecure_authentication" />
        </service>

        <service id="security.authentication_provider.antwebs_chateasecure" class="%antwebs_chateasecure_authentication_provider.class%" abstract="true" public="false">
          <argument /> <!-- User Provider -->
          <argument type="service" id="security.user_checker" />
          <argument /> <!-- Provider-shared Key -->
          <argument type="service" id="security.encoder_factory" />
          <argument>%security.authentication.hide_user_not_found%</argument>
        </service>

        <service id="antwewebs_revoke_access_on_logout_handler" class="%antwewebs_revoke_access_on_logout_handler.class%">
          <argument type="service" id="security.context" />
          <argument type="service" id="antwebs_chateasecure.client" />
        </service>
    </services>
</container>